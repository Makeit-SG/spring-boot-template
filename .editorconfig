# This file is for unifying the coding style for different editors and IDEs.
# See https://editorconfig.org
root = true

[*]
indent_size = 4
insert_final_newline = false
tab_width = 4
charset = utf-8
indent_style = space
trim_trailing_whitespace = true
end_of_line = lf
max_line_length = 120

[*.java]
indent_style = tab

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2